{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "status": {
            "enum": ["failure"]
        },
        "data": {
            "type": "null"
        },
        "errors": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "error" : {
                        "type": "string"
                    },
                    "detail": {
                        "type": ["string", "null"]
                    }
                },
                "additionalProperties": true,
                "required": [ "error", "detail" ]
            }
        }
    },
    "required": ["success", "data", "errors"],
    "additionalProperties": true
}
